# promtail-config.yml.j2 (если используется шаблонизация)
server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://localhost:3100/loki/api/v1/push

scrape_configs:
  - job_name: docker
    static_configs:
      - targets:
          - localhost
        labels:
          job: docker
          __path__: /var/lib/docker/containers/*/*-json.log
    pipeline_stages:
      - json:
          expressions:
            output: log
            stream: stream
            time: time
            attrs: attrs
      - json:
          source: attrs
          expressions:
            container_name: com.docker.swarm.task.name
            image_name: com.docker.swarm.service.name
      - regex:
          source: filename
          expression: (?P<container_id>[a-f0-9]{64})
      # --- Экранирование синтаксиса Go для Jinja2 ---
{% raw %}
      - template:
          source: container_id
          template: '{{ .Value | trunc 12 }}'
          target: short_container_id
{% endraw %}
      # --- ---
      - output:
          source: output
      - labels:
          stream:
          short_container_id: