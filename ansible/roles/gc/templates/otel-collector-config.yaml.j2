# /etc/otelcol/config.yaml
receivers:
  otlp:
    protocols:
      grpc:
        endpoint: 0.0.0.0:4317 # Слушаем OTLP gRPC от приложений
      http:
        endpoint: 0.0.0.0:4318 # Слушаем OTLP HTTP от приложений

exporters:
  otlp/tempo:
    endpoint: localhost:4317 # Отправляем в Tempo (gRPC)
    tls:
      insecure: true # Для локального тестирования

processors:
  batch:

service:
  pipelines:
    traces:
      receivers: [otlp]
      processors: [batch]
      exporters: [otlp/tempo]
